<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user.projectse.ProfileActivity"
    tools:showIn="@layout/activity_profile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to ADHD Helper please enter your personal info:"
        android:id="@+id/titileTxt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stdName"
        android:hint="Enter Your Full Name"
        android:textColor="#000000"
        android:layout_below="@+id/titileTxt"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stdInstitude"
        android:hint="Enter Univercity Name"
        android:textColor="#000000"
        android:layout_below="@+id/stdName"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stdDep"
        android:hint="Enter Deparpment"
        android:textColor="#000000"
        android:layout_below="@+id/stdInstitude"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stdAge"
        android:hint="Enter Student Age"
        android:textColor="#000000"
        android:layout_below="@+id/stdDep"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stdEmail"
        android:hint="Enter Student E-Mail"
        android:textColor="#000000"
        android:layout_below="@+id/stdAge"
        android:layout_alignRight="@+id/stdName"
        android:layout_alignEnd="@+id/stdName" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have Ritalin Prescription?"
        android:id="@+id/cbRit"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:layout_below="@+id/stdEmail" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have ADHD Diagnosis?"
        android:id="@+id/cbDiag"
        android:layout_below="@+id/cbRit"
        android:layout_centerHorizontal="true"
        android:checked="false" />

</RelativeLayout>
