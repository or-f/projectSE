<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:background="#303031"
    android:theme="@style/mytheme"
    style="@style/mytheme">
    <!--  News Feed Button -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0f0f0f"
        android:backgroundTintMode="src_atop"
        android:foregroundTintMode="src_over"
        android:id="@+id/popup"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:foregroundTint="#000000"
        android:layout_above="@+id/btn_Profile"
        android:foregroundGravity="top"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:id="@+id/but_sign"
            android:layout_gravity="center_horizontal|bottom" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="477dp"
            android:id="@+id/sign_img"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/sign"
            android:tintMode="src_atop"
            android:foregroundGravity="top" />

    </FrameLayout>

    <Button
        android:id="@+id/add_event_but"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/add"
        android:text="add event"
        android:layout_marginTop="83dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/view_but"
        android:layout_toEndOf="@+id/view_but"
        android:layout_marginLeft="79dp"
        android:layout_marginStart="79dp"
        android:background="#303031"
        android:typeface="normal"
        android:visibility="visible"
        android:foregroundGravity="bottom" />

    <!--  Friends Button -->
    <Button
        android:id="@+id/view_but"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/calendar"
        android:text="view events"
        android:layout_marginLeft="50dp"
        android:layout_alignTop="@+id/add_event_but"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp" />

    <!--  Messages Button -->
    <Button
        android:id="@+id/btn_messages"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/add"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/add_event_but"
        android:layout_alignEnd="@+id/add_event_but" />

    <!--  Places Button -->
    <Button
        android:id="@+id/edit_but"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/edit"
        android:text="edit tasks"
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/btn_messages"
        android:layout_toLeftOf="@+id/add_event_but"
        android:layout_toStartOf="@+id/add_event_but" />

    <!--  Events Button -->
    <Button
        android:id="@+id/btn_Profile"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/id"
        android:layout_alignTop="@+id/settings_but"
        android:layout_alignLeft="@+id/btn_messages"
        android:layout_alignStart="@+id/btn_messages"
        android:layout_alignBottom="@+id/settings_but"
        android:layout_alignRight="@+id/btn_messages"
        android:layout_alignEnd="@+id/btn_messages"
        android:text="Edit Profile"
        android:textSize="14dp"
        android:typeface="normal" />

    <!--  Photos Button -->
    <Button
        android:id="@+id/settings_but"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/settings"
        android:text="settings"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/add_event_but"
        android:layout_toStartOf="@+id/add_event_but"
        android:layout_marginBottom="66dp" />

</RelativeLayout>
