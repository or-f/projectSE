<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:background="#303031"
    android:theme="@style/mytheme"
    style="@style/mytheme">
    <!--  News Feed Button -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0f0f0f"
        android:backgroundTintMode="src_atop"
        android:foregroundTintMode="src_over"
        android:id="@+id/popup"
        android:visibility="visible"
        android:foregroundTint="#000000"
        android:foregroundGravity="top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btn_Profile">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:id="@+id/but_sign"
            android:layout_gravity="center_horizontal|bottom" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="442dp"
            android:id="@+id/sign_img"
            android:layout_gravity="center"
            android:src="@drawable/sign2"
            android:tintMode="src_atop"
            android:foregroundGravity="top" />

    </FrameLayout>

    <Button
        android:id="@+id/add_event_but"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/add2"
        android:text="add event"
        android:layout_marginTop="145dp"
        android:typeface="normal"
        android:visibility="visible"
        android:foregroundGravity="bottom"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="63dp"
        android:layout_marginEnd="63dp" />

    <!--  Friends Button -->
    <Button
        android:id="@+id/view_but"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/calendar2"
        android:text="view events"
        android:layout_marginLeft="50dp"
        android:layout_alignTop="@+id/add_event_but"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp" />

    <!--  Messages Button -->

    <!--  Places Button -->

    <!--  Events Button -->
    <Button
        android:id="@+id/btn_Profile"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/id2"
        android:text="Edit Profile"
        android:textSize="14dp"
        android:typeface="normal"
        android:layout_alignTop="@+id/settings_but"
        android:layout_alignLeft="@+id/add_event_but"
        android:layout_alignStart="@+id/add_event_but" />

    <!--  Photos Button -->
    <Button
        android:id="@+id/settings_but"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/settings2"
        android:text="settings"
        android:layout_marginBottom="86dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/view_but"
        android:layout_alignEnd="@+id/view_but" />

</RelativeLayout>
